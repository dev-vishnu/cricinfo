{
	"root": true,

	"extends": "@ljharb",
	"plugins": [
        "mocha"
      ],
	"rules": {
		"id-length": [2, { "min": 1, "max": 26 }],
		"max-statements": [2, 14],
		"new-cap": [2, { capIsNewExceptions: ["ToObject", "ToInteger", "ToLength", "SameValueZero", "RequireObjectCoercible"] }],
		"no-magic-numbers": [0],
		"no-useless-call": [1],
		"mocha/no-exclusive-tests": "error"
	}
}
